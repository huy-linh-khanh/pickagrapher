<div class="container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f| %>
    <%= devise_error_messages! %>

    <% if params[:image_url] == nil %>
      <div class="form-group">
        <%= f.label :profile_image %>
        <%= f.file_field :profile_image %>
        <%= f.hidden_field :profile_image_cache %>
      </div>
    <% else %>
      <%= f.hidden_field :image_url, value: params[:image_url] %>
    <% end %>

    <div class="form-group">
      <%= f.label :name %><br />
      <% unless params[:name] == nil %>
        <%= f.text_field :name, value: params[:name] %>
      <% else %>
        <%= f.text_field :name, autofocus: true %>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br />
      <% unless params[:email] == nil %>
        <%= f.email_field :email, value: params[:email], autocomplete: "off" %>
      <% else %>
        <%= f.email_field :email, autocomplete: "off" %>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= hidden_field_tag :uid, params[:uid] %>
      <%= hidden_field_tag :provider, params[:provider] %>
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
