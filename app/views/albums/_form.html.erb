<div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>
<div class="form-group">
  <%= f.label :category_id %>
  <%= f.select :category_id, Category.all.collect { |category| [category.name, category.id] }, prompt: "Select a category" %>
</div>
<% if @album.images %>
  <% @album.images.each do |image| %>
    <%= image_tag(image.url_url(:medium)) %>
    <%= link_to "Delete", image_path(image), method: "delete", class: "btn btn-primary" %>
    <hr />
  <% end %>
<% end %>
<div class="form-group">
  <%= f.label "Images" %>
  <%= file_field_tag "url[]", type: :file, multiple: true, class: "upload-image" %>
</div>
<div id="preview">

</div>
