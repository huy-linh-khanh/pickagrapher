<div class="container">
  <h2>Add Album</h2>
  <br />
  <div class="form">
    <%= form_for Album.new do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class="form-group">
      <%= f.label :category_id %>
      <%= f.select :category_id, Category.all.collect { |category| [category.name, category.id] }, prompt: "Select a category" %>
    </div>
    <div class="form-group">
      <%= f.submit "Add"%>
    </div>
    <% end %>
  </div>
</div>
