<div class="studio-theme-wrapper" style="margin-left:60px;margin-right:60px">
  <div class="col-sm-12 main">
    <br />
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Create Studio</h1>
      </div>
    </div><!--/.row-->

    <div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default" style="padding:10px;height:480px;background:url(http://www.kayture.com/wp-content/uploads/2014/06/best-photography-blogging.002.jpg);background-size:cover;">
					<!-- <div class="panel-heading">Information</div> -->
					<div class="panel-body">
            <%= form_for @photographer do |f| %>
            <div class="col-md-8">

            </div>
						<div class="col-md-4" style="background-color: rgba(255,255,255,0.8);padding:20px;border-radius:10px;">

								<div class="form-group">
                  <%= f.label "Brand name" %>
                  <%= f.text_field :name, style: "background-color:#d1d1d1;", class: "form-control", autofocus: true %>
								</div>

                <div class="form-group">
                  <%= f.label "Your current location?" %>
                  <%= f.select :location_id, Location.all.collect { |location| [location.name, location.id]}, prompt: "Select location", class: "form-control" %>
								</div>

                <div class="form-group">
                  <%= f.label "Available shooting places:"%>
                  <%# Location.all.each do |location_item| %>
                    <%# f.check_box(:location, {multiple: true}, location_item, nil) %>
                  <%# end %>
                    <div class="checkbox">
  										<label>
  											<input type="checkbox" value="">Sai Gon
  										</label>
  									</div>
  									<div class="checkbox">
  										<label>
  											<input type="checkbox" value="">Da Nang
  										</label>
  									</div>
  									<div class="checkbox">
  										<label>
  											<input type="checkbox" value="">Nha Trang
  										</label>
  									</div>
  									<div class="checkbox">
  										<label>
  											<input type="checkbox" value="">Da Lat
  										</label>
  									</div>
                </div>

                <div class="form-group" style="text-align:center;">
                  <%= f.submit "Create", class: "btn btn-primary", style: "width:100px;margin-right:10px;" %>
