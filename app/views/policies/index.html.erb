<link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,100italic,300italic,400italic,700italic,900italic' rel='stylesheet' type='text/css'>
<!-- <link href="app/assets/stylesheets/template/studio-datepicker3.css" rel="stylesheet">
<link href="app/assets/stylesheets/template/studio-styles.css" rel="stylesheet"> -->
<div class="studio-theme-wrapper">
  <div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar" style="padding-top: 18px;">
    <ul class="nav menu">
      <br />
      <li class="<%= 'active' if request.path == bookings_path %>">
        <%= link_to bookings_path do %>
          <span class="glyphicon glyphicon-shopping-cart"></span> Booking
        <% end %>
      </li>
      <li class="<%= 'active' if request.path == portfolios_path %>">
        <%= link_to portfolios_path do %>
          <span class="glyphicon glyphicon-picture"></span> Portfolio
        <% end %>
      </li>
      <li class="<%= 'active' if request.path == policies_path %>">
        <%= link_to policies_path do %>
          <span class="glyphicon glyphicon-euro"></span> Policies
        <% end %>
      </li>

    </ul>
  </div>

  <div class="col-sm-9 offset-sm-2 col-lg-10 offset-lg-2 main">

    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Policies</h1>
      </div>
    </div><!--/.row-->

    <% @my_policies.each do |policy| %>
      <%= form_for policy, :url => policy_path(policy), :method => "put", class: "role" do |f| %>
        <div class="row">
          <div class="col-lg-12">
            <div class="panel panel-default">
              <div class="panel-heading"><%= policy.category.name %></div>
              <div class="panel-body">

                <!-- <form role="form"> -->
                  <div class="col-md-6">
                    <div class="form-group">
                      <label>Shooting Fee</label>
                      <%= f.text_field :unit_rate, class: "form-control", :placeholder => policy.unit_rate %>
                      <!-- <input class="form-control" placeholder="5 000 000"> -->
                    </div>
                    <div class="form-group">
                      <label>Travel Fee</label>
                      <%= f.text_field :travel_rate, class: "form-control", :placeholder => policy.travel_rate %>
                      <!-- <input class="form-control" placeholder="1 500 000"> -->
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <label>Unit</label>
                      <%# text_field_tag :unit_name, class: "form-control", placeholder: policy.category.unit_name, readonly: "true" %>
                      <input class="form-control" placeholder="<%= policy.category.unit_name %>" readonly="true">
                    </div>
                    <div class="form-group">
                      <label>Unit</label>
                      <input class="form-control" placeholder="per day" readonly="true">
                    </div>
                  </div>

                  <div class="col-md-3">
                    <div class="form-group">
                      <label>Currency</label>
                      <input class="form-control" placeholder="USD" readonly="true">
                    </div>
                    <div class="form-group">
                      <label>Currency</label>
                      <input class="form-control" placeholder="USD" readonly="true">
                    </div>
                    <%= f.hidden_field :photographer, value: current_photographer %>
                    <%= f.hidden_field :category, value: policy.category %>
                    <%= f.submit "Update", class: "btn btn-primary" %>
                    <!-- <button type="submit" class="btn btn-primary">Update</button> -->
                  </div>

                <!-- </form> -->

              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>

    <!-- <%= @my_policies.each do |my_policy| %>
      <%= my_policy.category %>
      <br />
    <% end %> -->

  </div>	<!--/.main-->
</div>
